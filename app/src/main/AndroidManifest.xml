<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.costinel.fortouristsbytourists">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ForTouristsByTourists">
        <activity android:name=".ConfirmPassword">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="for-tourists-by-tourists-2e3f4.firebaseapp.com"
                    android:scheme="http" />
                <data
                    android:host="for-tourists-by-tourists-2e3f4.firebaseapp.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".ResetPassword" />
        <activity android:name=".UserDetails" />
        <activity android:name=".AttractionDetails" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity_logged_in" />
        <activity android:name=".Register" />
        <activity android:name=".Upload_Images" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ImagesActivity" />
    </application>

</manifest>